<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="expiryCache">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <heap unit="entries">5000</heap>
    </cache-template>

    <cache-template name="singleNonExpiryCache">
        <expiry>
            <none/>
        </expiry>
        <heap>1</heap>
    </cache-template>

    <cache alias="users" uses-template="singleNonExpiryCache"/>
    <cache alias="type" uses-template="singleNonExpiryCache"/>
    <cache alias="product" uses-template="singleNonExpiryCache"/>
    <cache alias="priceRequest" uses-template="singleNonExpiryCache"/>
    <cache alias="order" uses-template="singleNonExpiryCache"/>
    <cache alias="model" uses-template="singleNonExpiryCache"/>
    <cache alias="client" uses-template="singleNonExpiryCache"/>
</config>